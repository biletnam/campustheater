<h3><%= best_in_place_if @person.id == @current_user.id, @person, :fname, :type => :input %> <%= best_in_place_if @person.id == @current_user.id, @person, :lname, :type => :input %></h3>
<%= best_in_place_if @person.id == @current_user.id, @person, :college, :type => :select, :collection => YALE_COLLEGES.to_a %> <%= best_in_place_if @person.id == @current_user.id, @person, :year, :type => :input %><br /><br />
<%= best_in_place_if @person.id == @current_user.id, @person, :bio, :type => :textarea, :display_as => :display_bio %>

<% if @person.id == @current_user.id %>
	<br /><br />
	<h4>This portion is only visible to you:</h4><br />
	Email: <%= best_in_place @person, :email, :type => :input %><br />
	Allow people to email me: <%= best_in_place @person, :email_allow, :type => :checkbox %><br />
	Associated NetID: <%= @person.netid %>
<% end %>

<%= image_tag @person.pic, :class => "profile" if !@person.pic.blank? %>
<hr />
<h3>Show History</h3>
<table>
	<tr><th>Show Name</th><th>Role</th><th>Dates</th></tr>
	<% @person.show_positions.includes(:show).each do |sp| %>
	<tr><td><%= link_to sp.show.title, best_link(sp.show) %></td><td><%= sp.display_name %></td><td><%= format_long_rundates(sp.show) %></td></tr>
	<% end %>
</table>

