<div class="row news-item">
    <div class="span2 date">
        <span class="day"><%= news.created_at.strftime("%-d") %></span>
        <span class="month"><%= news.created_at.strftime("%B") %></span>
    </div>
    <div class="span8 post">
        <h2><%= news.title %></h2>
		<%= raw news.text %>
    </div>
</div>