<div class="row" style="text-align: center">
	<div class="span12">
		<b>Yale Drama Coalition</b> presents
		<hr style="width: 100px; margin: 10px auto;"/>
	</div>
</div>

<% @rows.each do |items| %>
	<% this_class = items.length == 2 ? "span6" : "span4" %>
	<% this_class = "span12" if items.length == 1 %>
	<div class="this_week">
		<div class="row">
		<% items.each do |item| %>
			<div class="<%= this_class %>">
				<% if item.is_a? Show %>
					<%= render :partial => 'shared/show_frontpage', :locals => { :show => item, :row_count => items.length, :color_palette => cycle("red", "blue","yellow", "green") } %>
				<% else %>
					<%= item %>
				<% end %>
			</div>
		<% end %>
		</div>
	</div>
<% end %>


