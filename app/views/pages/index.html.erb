<div class="news">
	<% @news.each do |news| %>
		<h2><%= news.title %></h2>
		<h4>Posted by: <%= news.poster %></h4>
		<h5><%= full_timestamp(news.created_at) %></h5>
		<%= raw news.text %>
	<% end %>
</div>