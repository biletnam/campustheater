<% content_for :head do %>
	<script>
		var show_showtimes = <%= raw @showtime_data.to_json %>;
	</script>
<% end %>

<div class="row" style="text-align: center">
	<div class="span12 cal-intro">
		Coming soon in <b>Yale Theater</b>
		<hr />
	</div>
</div>

<div class="this_week">
	<% @rows.each do |items| %>
		<% this_class = items.length == 2 ? "span6" : "span4" %>
		<% this_class = "span6 offset3" if items.length == 1 %>

		<div class="row">
		<% items.each do |item| %>
			<div class="<%= this_class %> item">
				<% if item.is_a? Show %>
					<%= render :partial => 'shared/show_frontpage', :locals => { :show => item, :row_count => items.length, :color_palette => item.accent_color ? item.accent_color.to_s : cycle("red", "blue","yellow","black","dark_blue","green", "light_blue") } %>
				<% else %>
					<%= item %>
				<% end %>
			</div>
		<% end %>
		</div>
	<% end %>
</div>
<br />

    Welcome to the website of the <b>Yale Drama Coalition</b>, an organization for the coordination of undergraduate theater at Yale. This site contains everything students need to find information on current shows at Yale, as well as resources for producing shows.
